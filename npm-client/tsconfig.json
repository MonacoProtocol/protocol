{
    "compilerOptions": {
      "target": "ES2019",
      "lib": ["ES2019"],
      "module": "commonjs",
      "allowJs": true,
      "declaration": true,
      "strict": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "preserveConstEnums": true,
      "moduleResolution": "Node",
      "allowSyntheticDefaultImports": true,
      "baseUrl": "src",
      "downlevelIteration": true,
      "skipLibCheck": true
    },
    "include": ["./src/", "./types/"]
  }
